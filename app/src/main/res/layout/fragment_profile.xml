<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bblack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/emailProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="68dp"
                android:text="Email: "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="32dp"
                android:text="Welcome,"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="26dp"
                app:layout_constraintEnd_toStartOf="@+id/nicknameProfile"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailProfile" />

            <TextView
                android:id="@+id/nicknameProfile"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp"
                android:text="NickName"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="26dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailProfile" />

            <TextView
                android:id="@+id/ageProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="72dp"
                android:text="Age: "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="50px"
                app:layout_constraintTop_toBottomOf="@+id/emailProfile"
                tools:layout_editor_absoluteX="0dp" />


            <TextView
                android:id="@+id/communityJoinedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="72dp"
                android:text="Communitys"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="50px"
                app:layout_constraintTop_toBottomOf="@+id/ageProfile"
                tools:layout_editor_absoluteX="0dp" />






            <Button
                android:id="@+id/signOutButton"
                android:layout_width="106dp"
                android:layout_height="77dp"
                android:layout_marginStart="152dp"
                android:layout_marginTop="500dp"
                android:layout_marginEnd="153dp"
                android:backgroundTint="@color/red_orange"
                android:text="Sign Out"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/settingsButton"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/red_orange"
                android:text="Settings"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>





</FrameLayout>